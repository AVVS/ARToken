{
  "devDependencies": {
    "@digix/web3-console": "^0.0.2",
    "babel-eslint": "^8.0.3",
    "bluebird": "^3.5.1",
    "eslint": "4.12.1",
    "eslint-config-makeomatic": "1.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-promise": "^3.6.0",
    "ethereumjs-abi": "^0.6.4",
    "ganache-cli": "^6.0.3",
    "ganache-core": "^2.0.2",
    "lodash": "^4.17.4",
    "papaparse": "^4.3.6",
    "prettier": "1.8.2",
    "truffle": "^4.0.1",
    "web3": "0.x.x"
  },
  "scripts": {
    "develop": "truffle develop",
    "compile": "truffle compile",
    "rpc": "ganache-cli --host 127.0.0.1 -l 115000000 -d -i 1337",
    "t:test": "truffle --network test",
    "t:ropsten": "NODE_ENV=production truffle --network ropsten",
    "t:live": "NODE_ENV=production truffle --network live",
    "deploy": "yarn compile && yarn t:test deploy",
    "deploy:ropsten": "NODE_ENV=production yarn compile && yarn t:ropsten deploy",
    "deploy:live": "NODE_ENV=production yarn compile && yarn t:live deploy",
    "parity:ropsten": "parity ui --force-ui --chain ropsten --geth --jsonrpc-port 8547 --reseal-min-period 0 --tx-gas-limit 4704624 --tx-queue-mem-limit 100",
    "parity:live": "parity ui --force-ui --geth --jsonrpc-port 8548 --tx-gas-limit 4704624 --tx-queue-mem-limit 100",
    "geth:live": "geth --syncmode fast --cache 2048 --rpc --rpcaddr 127.0.0.1 --rpcport 8548 --maxpeers 60 --rpcapi eth,net,personal,web3",
    "e:ropsten": "yarn t:ropsten exec",
    "e:live": "yarn t:live exec",
    "mint:live:phase_one": "yarn e:live scripts/mint_tokens.js",
    "verify:live:phase_one": "yarn e:live scripts/validate_balance.js"
  },
  "resolutions": {
    "web3": "0.20.2"
  }
}
